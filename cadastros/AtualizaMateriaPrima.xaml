<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cadastros.AtualizaMateriaPrima"
             Title="Atualiza Matéria Prima">
    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <Entry Placeholder="Nome" />
            <Entry Placeholder="CPF/CNPJ" />
            <Entry Placeholder="Endereço" />
            <Entry Placeholder="Número" />
            <Entry Placeholder="Cidade" />
            <Entry Placeholder="Estado" />
            <Entry Placeholder="País" />
            <Entry Placeholder="CEP" />
            <Entry Placeholder="Telefone" />
            <Entry Placeholder="Email" />
            <StackLayout Orientation="Horizontal"
                         HorizontalOptions="CenterAndExpand"
                         Spacing="20">
                <Button Text="Atualizar" Clicked="OnAtualizarClicked"/>
                <Button Text="Cancelar" Clicked="OnCancelarClicked"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
