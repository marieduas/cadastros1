<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cadastros.CadastroProduto"
             Title="Cadastro Produto">
    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <Entry Placeholder="Quantidade" />
            <Entry Placeholder="Valor Estimado" />
            <Entry Placeholder="Tempo Estimado" />
            <Entry Placeholder="Cidade" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="20">
                <Button Text="Cadastrar" Clicked="OnCadastrarClicked"/>
                <Button Text="Cancelar" Clicked="OnCancelarClicked"/>
            </StackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>
