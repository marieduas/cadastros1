<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cadastros.BuscarProduto"
             Title="Buscar Produto">
    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Nome:" />
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="ProductSearchEntry"
                       Placeholder="Nome do produto" />
                <Button Text="🔍" Clicked="OnSearchClicked"/>
                <Button Text="➕" Clicked="OnAddClicked"/>
                <Button Text="➖" Clicked="OnRemoveClicked"/>
            </StackLayout>
            <ListView x:Name="ProductListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Padding="5">
                                <Label Text="{Binding Name}" VerticalOptions="Center"/>
                                <Button Text="➖" Clicked="OnDeleteClicked" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="⬅️" Clicked="OnBackClicked" HorizontalOptions="Center"/>
        </StackLayout>
    </ScrollView>
</ContentPage>
